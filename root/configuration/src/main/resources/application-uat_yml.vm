#parse ( "include/loader_stringutils.vm" )
#set ( $appName = $strUtils.capitalize( ${MAVEN_ARTIFACT_ID} ) )
#set ( $dollar = '$' )
logging:
   level:
      ${ROOT_PKG}: info
      org.springframework.web: warn
      io.swagger.models.parameters.AbstractSerializableParameter: error
server:
   http2:
      enabled: true
   port: ${dollar}{PORT:8081}
   error:
      whitelabel:
         enabled: true
spring:
   application:
      name: ${appName}
   devtools:
      restart:
         enabled: false
      livereload:
         enabled: false
      add-properties: false
   jackson:
      serialization:
         write-dates-as-timestamps: false
         fail-on-empty-beans: false
   datasource:
      url: jdbc:p6spy:mysql://localhost:3306/db?useSSL=false
      username: root
      password: root
      sqlScriptEncoding: UTF-8
      driver-class-name: com.p6spy.engine.spy.P6SpyDriver
      hikari:
         minimum-idle: 2
         maximum-pool-size: 10
         connection-timeout: 30000
         idle-timeout: 300000
         max-lifetime: 600000
   jpa:
      open-in-view: false
      show-sql: false
      properties:
         hibernate:
            dialect: org.hibernate.dialect.MySQL5InnoDBDialect
            generate_statistics: false
            jdbc:
               batch_size: 30
               order_inserts: true
               order_updates: true
            cache:
               use_second_level_cache: false
            connection:
               provider_disables_autocommit: false
      hibernate:
         ddl-auto: update
   data:
      rest:
         detection-strategy: visibility
   h2:
      console:
         enabled: false
         path: /h2-console
         settings:
            trace: false
            web-allow-others: false
   rabbitmq:
      host: localhost
      port: 5672
      password: guest
      username: guest
springdoc:
   swagger-ui:
      enabled: true
      path: /swagger-ui.html
${MAVEN_ARTIFACT_ID}:
   rabbitmq:
      exchange:
         register-entity: register-entity-exchange
         update-entity-by-id: update-entity-by-id-exchange
         remove-entity-by-id: remove-entity-by-id-exchange
      queue:
         register-entity: register-entity-queue
         update-entity-by-id: update-entity-by-id-queue
         remove-entity-by-id: remove-entity-by-id-queue
      routingkey:
         register-entity: register-entity-routingkey
         update-entity-by-id: update-entity-by-id-routingkey
         remove-entity-by-id: remove-entity-by-id-routingkey
okta:
  oauth2:
    clientId: ${dollar}{OKTA_OAUTH2_CLIENT_ID:..}
    clientSecret: ${dollar}{OKTA_OAUTH2_CLIENT_SECRET:..}}
    issuer: ${dollar}{OKTA_OAUTH2_ISSUER:https://dev-507648.okta.com/oauth2/default}
    audience: api://default
    groups-claim: groups
